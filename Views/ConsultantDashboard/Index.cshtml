@model HMS.Models.PatientMasterModel
@{
	Layout = "~/Views/Shared/_CounsultantLayout.cshtml";
	HMS.Common.EncryptDecrypt encDecr = new HMS.Common.EncryptDecrypt();
	string Action = ViewContext.RouteData.Values["action"].ToString();
	string Controller = ViewContext.RouteData.Values["controller"].ToString();
}

<div class="page-header">
    <div class="page-leftheader">
		<h4 class="page-title mb-0">Consultant Dashboard</h4>
	</div>
	<div class="page-rightheader">
		<div class="ml-3 ml-auto d-flex">
		</div>
	</div>
</div>
 @using (Html.BeginForm(Action, Controller, null, FormMethod.Post))
{
    <h1 style="text-align:center">Welcome Consultant </h1>

    <div class="row">
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body">
                    <p class="card-text">Total Patient = @ViewBag.total </p>
                    <p class="card-text">Today's New patient=  @ViewBag.todayPatient</p>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body">                
                    <p class="card-text">Today’s Appointments =  </p>
                    <p class="card-text">Revisit Patients=</p>
                    <p></p>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body">
                    <p class="card-text">Opd Services = </p>
                    <p></p>
                </div>
            </div>
        </div>
    </div>
    <figure class="figure">
        <table class="barChart_h">
            <tbody>
                <tr>
                    <th class="blankCell"></th>
                    <th class="y-axis">
                        <div class="y-axis-title"># of Responses</div>                   
                    </th>
                </tr>

                <!-- Data Rows -->
                <tr class="firstRow">
                    <th scope="row">April :</th>
                    <td><span style="width:5%"><b>10</b></span></td>
                </tr>
                <tr>
                    <th scope="row">March :</th>
                    <td><span style="width:20%"><b>30</b></span></td>
                </tr>
                <tr>
                    <th scope="row">Feburary :</th>
                    <td><span style="width:10%"><b>20</b></span></td>
                </tr>

                <tr class="lastRow">
                    <th scope="row">January :</th>
                    <td><span style="width:50%"><b>80</b></span></td>
                </tr>
                <tr>   
                    <th class="blankCell"></th>
                    <th class="y-axis">  

                        <ol class="y-axis-labels">
                            <li class="zero"><b>0</b></li>
                            <li><b>20</b></li>
                            <li><b>40</b></li>
                            <li><b>60</b></li>
                            <li><b>80</b></li>
                            <li><b>100</b></li>
                            <li><b>120</b></li>
                            <li><b>140</b></li>
                            <li><b>160</b></li>
                        </ol>
                    </th>
                </tr>
            </tbody>

        </table>
    </figure>
}
<style>
    
html,
body {
  margin: 0;
  padding: 0;
}
body {
  padding: 0 10px;
}
